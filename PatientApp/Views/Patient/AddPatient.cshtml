
<div class="container-fluid">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="ListPatients">Patients</a></li>
                <li class="breadcrumb-item active " aria-current="page">Add Patient</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->
        <div class="row gutters-sm">
            <div class="col-md-12 pb-2 pt-2">
                <button type="button" onclick="addPatient()" class="btn btn-primary" style="float:right">Add Patient</button>
                <button type="button" onclick="cancelPatient()" class="btn btn-danger" style="float:right">Cancel</button>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/nomad.jpg" alt="Admin" class="rounded-circle" width="150" id="image" />
                            <div class="mt-3">
                                <h4 id="cardname"></h4>
                                <p class="text-secondary mb-1" id="cardssnumber"></p>
                                <p class="text-muted font-size-sm" id="cardaddress"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">Diagnoses</h6>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">You can Add Diagnoses and Medicines on Next Phase</h6>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="name">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Surname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="surname">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Social Security Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="number" id="ssnumber">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="number" id="phone" placeholder="Without Zero At The Start">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="address" size="50">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Age</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="number" id="age">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Height</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="number" id="height">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Weight</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="number" id="weight">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Birth Date</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="bday" placeholder="xx-xx-xxxx">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">E-Mail</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="email">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <select name="gender" id="gender">
                                    <option value="-1">Select...</option>
                                    <option value="0">Erkek</option>
                                    <option value="1">Kadın</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/js/addpatient.js"></script>
}